// Initial system for the unicode behavior
&uc { default-mode = <UC_MODE_LINUX>; };

// Configure caps word behavior
&caps_word {
    continue-list = <BSPC UNDERSCORE MINUS>;
};

// Define mod-morph with a *single* mod trigger for less repetition
#define SIMPLE_MORPH(NAME, MOD, BINDING1, BINDING2)       \
  ZMK_MOD_MORPH(NAME, mods = <(MOD_L##MOD | MOD_R##MOD)>; \
                bindings = <BINDING1>, <BINDING2>;)

// Tap: comma | Shift + tap: semicolon
SIMPLE_MORPH(comma_morph, SFT, &kp COMMA, &kp SEMICOLON)

// Tap: dot | Shift + tap: colon
SIMPLE_MORPH(dot_morph, SFT, &kp DOT, &kp COLON)

// Tap: qmark | Shift + tap: excl
SIMPLE_MORPH(qexcl, SFT, &kp QMARK, &kp EXCL)

// Tap: backspace | Shft + tap: delete
SIMPLE_MORPH(bs_del, SFT, &kp BSPC, &kp DEL)

// Tap: dollar | Shft + tap: euro
SIMPLE_MORPH(dollar_morph, SFT, &kp DOLLAR, &uc UC_CURR_EURO)

// Tap: slash | Shft + tap: backslash
SIMPLE_MORPH(slash_morph, SFT, &kp SLASH, &kp BACKSLASH)

// Home row mods
#define KEYS_L LT0 LT1 LT2 LT3 LT4 LT5 LM0 LM1 LM2 LM3 LM4 LM5 LB0 LB1 LB2 LB3 LB4 LB5
#define KEYS_R RT0 RT1 RT2 RT3 RT4 RT5 RM0 RM1 RM2 RM3 RM4 RM5 RB0 RB1 RB2 RB3 RB4 RB5
#define THUMBS LH2 LH1 LH0 RH0 RH1 RH2

#define MAKE_HRM(NAME, HOLD, TAP, TRIGGER_POS) \
  ZMK_HOLD_TAP(NAME,                           \
               bindings = <HOLD>, <TAP>;       \
               flavor = "tap-preferred";       \
               tapping-term-ms = <280>;        \
               quick-tap-ms = <175>;           \
               require-prior-idle-ms = <150>;  \
               hold-trigger-on-release;        \
               hold-trigger-key-positions = <TRIGGER_POS>;)

MAKE_HRM(hml, &kp, &kp, KEYS_R THUMBS) // Left-hand HRMs
MAKE_HRM(hmr, &kp, &kp, KEYS_L THUMBS) // Right-hand HRMs

// Home row mods for the navigation layer
MAKE_HRM(hml_slash, &kp, &slash_morph, KEYS_R THUMBS)

ZMK_HOLD_TAP(mo_kp,
             bindings = <&mo>, <&kp>;
             flavor = "tap-preferred";
             tapping-term-ms = <280>;
             quick-tap-ms = <175>;
             require-prior-idle-ms = <150>;
             hold-trigger-on-release;)

ZMK_HOLD_TAP(mo_bs,
             bindings = <&mo>, <&bs_del>;
             flavor = "tap-preferred";
             tapping-term-ms = <280>;
             quick-tap-ms = <250>;
             require-prior-idle-ms = <150>;
             hold-trigger-on-release;)

