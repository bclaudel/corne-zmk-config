#include <behaviors.dtsi>
#include <behaviors/unicode.dtsi>
#include <behaviors/num_word.dtsi>
#include <zmk-helpers/helper.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

// Initial system for the unicode behavior
&uc { default-mode = <UC_MODE_LINUX>; };

// Define mod-morph with a *single* mod trigger for less repetition.
#define SIMPLE_MORPH(NAME, MOD, BINDING1, BINDING2)       \
  ZMK_MOD_MORPH(NAME, mods = <(MOD_L##MOD | MOD_R##MOD)>; \
                bindings = <BINDING1>, <BINDING2>;)

// Tap: comma | Shift + tap: semicolon | Ctrl + shift + tap: <.
SIMPLE_MORPH(comma_morph, SFT, &kp COMMA, &comma_inner_morph)
SIMPLE_MORPH(comma_inner_morph, CTL, &kp SEMICOLON, &kp LESS_THAN)

/ {
    behaviors {
        HRM_R: HRM_R {
            compatible = "zmk,behavior-hold-tap";
            label = "HRM_R";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <280>;
            hold-trigger-on-release;
            hold-trigger-key-positions = <0 1 2 3 4 5 12 13 14 15 16 17 24 25 26 27 28 29 36 37 38>;
            flavor = "tap-preferred";
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
        };

        HRM_L: HRM_L {
            compatible = "zmk,behavior-hold-tap";
            label = "HRM_L";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <280>;
            hold-trigger-on-release;
            hold-trigger-key-positions = <6 18 19 7 30 31 39 40 41 32 20 8 9 21 33 34 22 10 11 23 35>;
            flavor = "tap-preferred";
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
        };

        bspc_del: backspace_delete {
            compatible = "zmk,behavior-mod-morph";
            label = "BACKSPACE_DELETE";
            bindings = <&kp BACKSPACE>, <&kp DELETE>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };

        mo_kp: mo_kp {
            compatible = "zmk,behavior-hold-tap";
            label = "MO_KP";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <280>;
            hold-trigger-on-release;
            flavor = "tap-preferred";
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
        };

        mo_bspc_del: mo_bspc_del {
            compatible = "zmk,behavior-hold-tap";
            label = "MO_BSPC_DEL";
            bindings = <&mo>, <&bspc_del>;

            #binding-cells = <2>;
            tapping-term-ms = <280>;
            hold-trigger-on-release;
            flavor = "tap-preferred";
            quick-tap-ms = <250>;
            require-prior-idle-ms = <150>;
        };
    };

    combos {
        compatible = "zmk,combos";

        Left_Bracket {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <4 5>;
            layers = <0 1>;
        };

        Right_Bracket {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <7 6>;
            layers = <0 1>;
        };

        Left_Parenthesis {
            bindings = <&kp LEFT_PARENTHESIS>;
            key-positions = <16 17>;
            layers = <0 1>;
        };

        Right_Parenthesis {
            bindings = <&kp RIGHT_PARENTHESIS>;
            key-positions = <18 19>;
            layers = <0 1>;
        };

        Left_Brace {
            bindings = <&kp LEFT_BRACE>;
            key-positions = <28 29>;
            layers = <0 1>;
        };

        Right_Brace {
            bindings = <&kp RIGHT_BRACE>;
            key-positions = <30 31>;
            layers = <0 1>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Base";
            bindings = <
&kp TAB     &kp Q              &kp W              &kp E           &kp R                &kp T           &kp Y       &kp U                 &kp I           &kp O               &kp P                  &kp BACKSLASH
&kp ESCAPE  &HRM_L LEFT_GUI A  &HRM_L LEFT_ALT S  &HRM_L LCTRL D  &HRM_L LEFT_SHIFT F  &kp G           &kp H       &HRM_R RIGHT_SHIFT J  &HRM_R RCTRL K  &HRM_R RIGHT_ALT L  &HRM_R RIGHT_GUI SEMI  &kp SINGLE_QUOTE
&tog 1      &kp Z              &kp X              &kp C           &kp V                &kp B           &kp N       &kp M                 &kp COMMA       &kp DOT             &kp FSLH               &sl 5
                                                  &num_word 4     &mo_bspc_del 3 0     &mo_kp 4 TAB    &kp RETURN  &mo_kp 2 SPACE        &caps_word
            >;
        };

        gallium_layer {
            bindings = <
&trans  &kp B              &kp L              &kp D                  &kp C                &kp V     &kp J   &kp Y                 &kp O                   &kp U               &comma_morph        &trans
&trans  &HRM_L LEFT_GUI N  &HRM_L LEFT_ALT R  &HRM_L LEFT_CONTROL T  &HRM_L LEFT_SHIFT S  &kp G     &kp P   &HRM_R RIGHT_SHIFT H  &HRM_R RIGHT_CONTROL A  &HRM_R RIGHT_ALT E  &HRM_R RIGHT_GUI I  &trans
&trans  &kp X              &kp Q              &kp M                  &kp W                &kp Z     &kp K   &kp F                 &kp APOS                &kp SEMI            &kp DOT             &trans
                                              &trans                 &trans               &trans    &trans  &trans                &trans
            >;

            label = "Gallium";
        };

        navigation_layer {
            display-name = "Nav";
            bindings = <
&trans  &trans        &trans        &trans            &trans          &trans    &none     &none     &kp PAGE_UP    &none      &none   &trans
&trans  &kp LEFT_GUI  &kp LEFT_ALT  &kp LEFT_CONTROL  &kp LEFT_SHIFT  &trans    &kp LEFT  &kp DOWN  &kp UP         &kp RIGHT  &trans  &trans
&trans  &trans        &trans        &trans            &trans          &trans    &trans    &trans    &kp PAGE_DOWN  &trans     &trans  &trans
                                    &trans            &trans          &trans    &trans    &trans    &trans
            >;

            label = "Nav";
        };

        symbol_layer {
            display-name = "Sym";
            bindings = <
&trans  &kp GRAVE                    &kp LESS_THAN             &kp GREATER_THAN           &kp MINUS                &kp PIPE         &kp CARET    &kp LEFT_BRACE                       &kp RIGHT_BRACE                         &kp DOLLAR                  &kp UNDERSCORE                  &trans
&trans  &HRM_L LEFT_GUI EXCLAMATION  &HRM_L LEFT_ALT ASTERISK  &HRM_L LEFT_CONTROL SLASH  &HRM_L LEFT_SHIFT EQUAL  &kp AMPERSAND    &kp HASH     &HRM_R RIGHT_SHIFT LEFT_PARENTHESIS  &HRM_R RIGHT_CONTROL RIGHT_PARENTHESIS  &HRM_R RIGHT_ALT SEMICOLON  &HRM_R RIGHT_GUI DOUBLE_QUOTES  &trans
&trans  &kp TILDE                    &kp PLUS                  &kp LEFT_BRACKET           &kp RIGHT_BRACKET        &kp PERCENT      &kp AT_SIGN  &kp COLON                            &kp COMMA                               &kp PERIOD                  &kp SQT                         &trans
                                                               &trans                     &trans                   &trans           &trans       &trans                               &trans
            >;
        };

        num_layer {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &kp N7  &kp N8  &kp N9  &trans            &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &kp N4  &kp N5  &kp N6  &uc UC_CURR_EURO  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &kp N0  &kp N1  &kp N2  &kp N3  &trans            &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;

            label = "Num";
        };

        sys_layer {
            bindings = <
&kp F1      &kp F2        &kp F3        &kp F4        &kp F5        &kp F6          &kp F7       &kp F8  &kp F9  &kp F10  &kp F11  &kp F12
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &sys_reset   &trans  &trans  &trans   &trans   &trans
&trans      &trans        &trans        &trans        &trans        &trans          &bootloader  &trans  &trans  &trans   &trans   &trans
                                        &trans        &trans        &trans          &trans       &trans  &trans
            >;

            label = "Sys";
        };
    };
};
